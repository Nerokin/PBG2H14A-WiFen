      <VBox alignment="CENTER" snapToPixel="false" >
         <children>
            <Button fx:id="beitretenHmBtn" text="Spiel beitreten">
               <font>
                  <Font size="22.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Button>
            <Button fx:id="erstellenHmBtn" text="Spiel erstellen">
               <font>
                  <Font size="22.0" />
